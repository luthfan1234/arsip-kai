{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "@/Components/*": ["resources/js/Components/*"],
            "@/Layouts/*": ["resources/js/Layouts/*"],
            "@/Pages/*": ["resources/js/Pages/*"]
        },
        "jsx": "preserve"
    },
    "include": [
        "resources/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
